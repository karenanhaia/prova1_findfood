<div class="container-fluid">
  <div class="row">
    <div class="col-md-7">
      <% @restaurants.all.each do |restaurant| %>
        <div class="panel panel-default panel-meal">
          <h2><%= link_to restaurant.name, showmeals_restaurants_path(restaurant_id: restaurant.id) %></h2>
          <p>Endere√ßo: <%= restaurant.address %></p>
          <p>Telefone: <%= restaurant.phonenumber %></p>
        </div>
      <% end %>
    </div>

    <div class="col-md-4 col-md-offset-1">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Buscar Prato</h3>
        </div>
        <div class="panel-body">
          <%= form_tag("/restaurants/homepage", method: "post") do %>
            <%= text_field_tag(:search_term) %>
            <%= submit_tag("Search") %>
          <% end %>
        </div>
      </div>

      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Categorias</h3>
        </div>
        <div class="panel-body">
          <ul>
            <% Category.all.each do |category| %>
              <li><%= link_to category.description, homepage_restaurants_path(category_id: category.id) %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>

</div>